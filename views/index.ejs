<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Url Shrinker</title>
</head>
<body>
    <div class="container">
        <h1>Url Shrinker</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">Url</label>
            <input autocomplete="off" required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control mr-2 my-3 pr-5">
            <button type="submit" class="btn btn-primary">Shrink</button>
        </form>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Full Url</th>
                        <th>Short Url</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                        <tr>
                            <td><a href="<%= shortUrl.fullUrl %>"><%= shortUrl.fullUrl %></a></td>
                            <td><a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
                            <td><%= shortUrl.clicks %></td>
                        </tr>
                    <% }) %> 
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>